    <TextView
        android:id="@+id/auth_login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="@string/auth_login"
        app:layout_constraintEnd_toStartOf="@id/auth_login"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/auth_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/auth_login_label"
        app:layout_constraintBottom_toBottomOf="@id/auth_login_label"
        app:layout_constraintStart_toEndOf="@id/auth_login_label"/>

    <TextView
        android:id="@+id/auth_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_password"
        android:layout_marginTop="26dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/auth_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_login_label"/>

    <EditText
        android:id="@+id/auth_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/auth_password_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/auth_password_label"
        app:layout_constraintTop_toTopOf="@id/auth_password_label" />

    <Button
        android:id="@+id/auth_login_btn"
        android:text="@string/auth_sign_in"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_password_label"/>

    <Button
        android:id="@+id/auth_google_btn"
        android:text="@string/auth_sign_in_google"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_login_btn"/>
    <Button
        android:id="@+id/auth_vk_btn"
        android:text="@string/auth_sign_in_vk"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_google_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>